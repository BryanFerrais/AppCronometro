<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSST"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_preferences" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnCloseApp"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:background="@android:drawable/presence_offline" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="Cronometro:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Chronometer
        android:id="@+id/chrono"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:gravity="center_horizontal"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Ãšltimo tempo salvo:" />

    <TextView
        android:id="@+id/txtLast"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:gravity="center_horizontal"
        android:text="00:00"
        android:textSize="36sp" />

    <ListView
        android:id="@+id/lvTempos"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="30"
        android:textAlignment="center">

    </ListView>

    <Button
        android:id="@+id/btnSaveTempos"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3"
        android:text="Salvar tempo"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCmd"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="3"
        android:text="Comandos de Voz"
        android:textAllCaps="false" />

</androidx.appcompat.widget.LinearLayoutCompat>